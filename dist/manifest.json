{
    "manifest_version": 3,
    "name": "SEO Cannibalization Detector",
    "version": "1.0",
    "description": "Detect SEO cannibalization from Google Search Console data",
    "permissions": ["storage"],
    "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./assets/cannibalization-icon-16.png",
      "48": "./assets/cannibalization-icon-48.png",
      "128": "./assets/cannibalization-icon-128.png"
    }
  },
  "icons": {
    "16": "./assets/cannibalization-icon-16.png",
    "48": "./assets/cannibalization-icon-48.png",
    "128": "./assets/cannibalization-icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}